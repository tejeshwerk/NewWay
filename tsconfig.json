{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": [
        "./*"
      ]
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "jsx": "react-native",
      "moduleResolution": "node"
    },
    "include": ["app", "components", "services", "declarations.d.ts"]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
